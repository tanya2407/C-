##########################################################
nCr = n! / [(n-r)! * r!]
    = [n * (n-1) * ... * (n-k+1)] / [k * (k-1) * ... * 1]
    
 Also,
 
 C(n,r) = C(n,n-r)
 #########################################################
 
 long ncr(long n,long r){
    if(r>n-r)
        r = n-r;
    long res = 1;
    for(int i=0;i<r;i++){
        res *= (n-i);
        res /= (i+1);
    }
    return res;
}
 
